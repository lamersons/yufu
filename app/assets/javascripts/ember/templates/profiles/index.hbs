
{{#if translatorIndividual}}
  <span>{{translatorIndividual._type}} </span>
  {{#link-to 'translator_individual.edit' translatorIndividual}}{{ts 'frontend.profile.edit'}}{{/link-to}}
  {{#if translatorIndividual.is_active}}
    {{ts 'frontend.profile.is_active'}}
  {{else}}
    <button class="pink" {{action 'activate' translatorIndividual translatorCompany}}> {{ts 'frontend.profile.activate'}}</button>
  {{/if}}
