<!-- Раздел с формой -->
<%= form_for @order, as: :order, url: url_for(controller: 'orders', action: 'update'), html: {class: "section-form step-1"} do |f| %>
<!-- Бекграунд модального окна -->
<div class="modal-bg" ></div>
<div class="modal modal-lang clearfix" ng-hide="hideModals">
  <%= form_for @order, as: :order, url: url_for(controller: 'orders', action: 'add_languages'), remote: true do |al| %>
    <%= al.submit class: 'close'%>
    <p class="title">Языки перевода</p>
    <div class="clearfix"></div>
    <div class="line"></div>
    <!-- Обертка для скролбара -->
    <div class="scroll">
        <!-- Колонка -->
      <% @languages.each do |d|%>
          <label class="checkbox clearfix">
            <input type="checkbox" name="order[available_languages_ids][]" value="<%=d.id%>" <%'checked' if @order.available_languages.include? d%> >
            <em></em>
            <p><%=d.name%></p>
          </label>
      <%end%>
        <div class="clear"></div>
    </div>
  <%end%>
    <!-- /Обретка для скроллбара -->
</div>


<div class="container clearfix">
  <h1 class="main"><%=ts(:make_order_for)%> <span class="pink-bright"><%=ts(:written)%></span></h1>
    <div class="height-3"></div>
    <p class="title"><%=ts(:translation_params)%></p>
    <!-- Колонка -->
    <div class="col-1">
        <p>Язык оригинала</p>
        <div class="custom-select">
            <%=f.select :original_language, Language.all%>
        </div>
    </div>
    <!-- /Колонка -->
    <!-- Колонка -->
    <div class="col-1">
        <p>Язык перевода</p>
        <div class="custom-select">
            <select ng-model="order.translationTo" ng-options="language.value as language.name for language in languages">
            </select>
        </div>
    </div>
    <!-- /Колонка -->
    <div class="clear"></div>
    <!-- Колонка -->
    <div class="col-1">
        <p>Тип перевода</p>
        <div class="custom-select">
            <select ng-model="order.typeOfTranslation" ng-options="dict as dict.name|translate for dict in dictionaries|filter:{category: 'type_of_translation'}">
            </select>
        </div>
    </div>
    <!-- /Колонка -->
    <!-- Колонка -->
    <div class="col-1 last">
      <p>Число слов</p>
        <input type="text" ng-model="order.wordCount">
    </div>
    <!-- /Колонка -->
    <!-- Колонка -->
